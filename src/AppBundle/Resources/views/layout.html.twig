{% extends '::base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">{{ 'button.toggle'|trans }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    <img src="{{ asset('build/img/ko-logo.png') }}" alt="{{ 'project_name'|trans }}">
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                {{ knp_menu_render('AppBundle:MenuBuilder:top', {currentClass: 'active'}) }}
            </div>
        </div>
    </nav>

    <div class="container">
        <img src="{{ asset('build/img/ko-logo.png') }}" class="visible-print-block" style="margin-bottom: 20px">
        {{ block('content') }}
    </div>
    <footer class="hidden-print">
        <div class="container fia-logo">
                <img src="{{ asset('build/img/ko-empty.png') }}" class="pull-left fia-left-logo">
                <img src="{{ asset('build/img/ko.png') }}" class="pull-right fia-right-logo">
        </div>
        <div class="container">
            {% include(cms_block('footer')) %}
        </div>
    </footer>

    <div id="bsModalContent" class="hidden">
        <div class="modal-body">
            {{ 'loading'|trans }}
        </div>
    </div>

    <div id="bsModalConfirmContent" class="hidden">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'button.close'|trans }}">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="bsModalTitle"></h4>
        </div>
        <div class="modal-body"></div>
    </div>

    <div id="bsModalConfirmButtons" class="hidden" data-append="1">
        <div class="modal-footer">
            <button class="btn btn-primary js-confirm-btn">{{ 'button.submit'|trans }}</button>
            <button type="button" class="btn btn-default border-btn" data-dismiss="modal">
                {{ 'button.close'|trans }}
            </button>
        </div>
    </div>

{% endblock body %}
