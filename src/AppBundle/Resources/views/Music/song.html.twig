{% extends 'AppBundle::layout.html.twig' %}
{% block css %}
    <style>
        .audioCenter
        {
            margin: 10px auto;
            width: 320px;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="jumbotron" style="padding-bottom: 28px;">
            <div class="text-center">
                <h2 class="contentTitle">{{ song }}</h2>
            </div>
            <div class="container-fluid audioCenter">
                <audio controls>
                    {% if file_exists('uploads/'~song~'.mp3') %}
                        <source src="{{ '/uploads/'~song~'.mp3' }}" type="audio/mpeg">
                    {% endif %}
                    Your browser does not support the audio element.
                </audio>
            </div>
            <div class="text-center songSection">
                <h2>Dainos žodžiai:</h2>
            </div>
        </div>
        <div class="text-center jumbotron lyricsSection">
            {% for i in 0..10 %}
                {% if file_exists('uploads/'~song~'_l'~loop.index~'.png') %}
                    <img style="width: 100%;" src="{{ asset('uploads/'~song~'_l'~loop.index~'.png') }}">
                {% endif %}
            {% endfor %}
        </div>
        <div class="jumbotron tabSectionTitle">
            <div class="text-center songSection">
                <h2>Tablatūra gitarai</h2>
            </div>
        </div>
        <div class="jumbotron tabSection">
            {% for i in 0..10 %}
                {#{{ dump('uploads/'~song~'_t'~loop.index~'.png') }}#}
                {% if file_exists('uploads/'~song~'_t'~loop.index~'.png')%}
                    <img style="width: 100%;" src="{{ asset('uploads/'~song~'_t'~loop.index~'.png') }}">
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
