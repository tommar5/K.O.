{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="jumbotron">
        <div class="text-center page-header">
            <h1 style="font-size: 30px;">{{ article.getTitle() }}</h1>
        </div>
        <div class="page-header">
            <h2>Autorius: {{ article.author }}</h2>
            <h2>Data: {{ article.createdAt|date("Y-m-d") }}</h2>
        </div>
        <div>
            <p>{{ article.content }}</p>
        </div>
    </div>
{% endblock %}