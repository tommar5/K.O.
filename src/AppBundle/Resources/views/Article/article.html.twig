{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="jumbotron">
        <div class="text-center page-header">
            <h1 style="font-size: 40px;">{{ article.title }}</h1>
        </div>
        <div class="page-header">
            <h1>Autorius: {{ article.author }}</h1>
            <h2>{{ article.createdAt|date("d/m/Y") }}</h2>
        </div>
        <div>
            <p>{{ article.content }}</p>
        </div>
    </div>
{% endblock %}